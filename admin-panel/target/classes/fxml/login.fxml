<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.belmonthotel.admin.controllers.LoginController"
            styleClass="root">
    <children>
        <!-- Background with gradient -->
        <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" 
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
              style="-fx-background-color: linear-gradient(to bottom, #667f5f, #4a5d3a);">
            
            <!-- Login Container -->
            <VBox alignment="CENTER" spacing="30" styleClass="login-container" 
                  maxWidth="400" prefWidth="400" 
                  style="-fx-padding: 40px;">
                <padding>
                    <Insets top="40" right="40" bottom="40" left="40"/>
                </padding>
                
                <!-- Logo/Title -->
                <VBox alignment="CENTER" spacing="10">
                    <ImageView fx:id="logoImageView" fitWidth="80" fitHeight="80" preserveRatio="true" visible="false" managed="false"/>
                    <Text styleClass="login-title" text="Belmont Hotel" />
                    <Text styleClass="login-subtitle" text="Admin Panel" />
                </VBox>
                
                <!-- Login Form -->
                <VBox spacing="20" style="-fx-pref-width: 320;">
                    <!-- Email Field -->
                    <VBox spacing="5">
                        <Label text="Email" style="-fx-text-fill: #2d3a26; -fx-font-weight: bold;"/>
                        <TextField fx:id="emailField" promptText="Enter your email" 
                                   onAction="#handleLogin"/>
                    </VBox>
                    
                    <!-- Password Field -->
                    <VBox spacing="5">
                        <Label text="Password" style="-fx-text-fill: #2d3a26; -fx-font-weight: bold;"/>
                        <PasswordField fx:id="passwordField" promptText="Enter your password" 
                                      onAction="#handleLogin"/>
                    </VBox>
                    
                    <!-- Login Button -->
                    <Button text="Login" onAction="#handleLogin" 
                           styleClass="login-button" 
                           style="-fx-pref-width: 320; -fx-pref-height: 45;"
                           defaultButton="true"/>
                </VBox>
                
                <!-- Footer Info -->
                <Text style="-fx-font-size: 12px; -fx-text-fill: #999999; -fx-text-alignment: center;" 
                      text="Use admin@belmonthotel.com to login" 
                      wrappingWidth="320"/>
            </VBox>
        </VBox>
    </children>
</AnchorPane>

