<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.belmonthotel.admin.controllers.BookingsController"
      spacing="20" style="-fx-padding: 25px;">
    <Label text="Bookings Management" styleClass="label-title"/>
    
    <!-- Filters and Search -->
    <VBox spacing="10">
        <HBox spacing="15" alignment="CENTER_LEFT">
            <TextField fx:id="searchField" promptText="Search by reservation number, guest name, or hotel..." 
                       prefWidth="250"/>
            <TextField fx:id="emailSearchField" promptText="Search by email..." 
                       prefWidth="200"/>
            <ComboBox fx:id="statusFilter" prefWidth="130" promptText="Status"/>
            <ComboBox fx:id="roomTypeFilter" prefWidth="150" promptText="Room Type"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="refreshBtn" text="Refresh" styleClass="btn-primary"/>
        </HBox>
        <HBox spacing="15" alignment="CENTER_LEFT">
            <DatePicker fx:id="dateFromFilter" promptText="From Date"/>
            <DatePicker fx:id="dateToFilter" promptText="To Date"/>
            <Label text="Amount Range:"/>
            <TextField fx:id="amountMinField" promptText="Min" prefWidth="100"/>
            <Label text="-"/>
            <TextField fx:id="amountMaxField" promptText="Max" prefWidth="100"/>
            <Button fx:id="clearFiltersBtn" text="Clear Filters" styleClass="btn-secondary"/>
        </HBox>
    </VBox>
    
    <!-- Sort Options Panel -->
    <TitledPane text="Sort Algorithms (Java Implementation)" expanded="true">
        <VBox spacing="10" style="-fx-padding: 15px;">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Algorithm:" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="sortAlgorithmCombo" prefWidth="150" promptText="Select Algorithm"/>
                <Label text="Sort By:" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="sortFieldCombo" prefWidth="150" promptText="Select Field"/>
                <Button fx:id="sortBtn" text="Sort" styleClass="btn-primary"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="sortMetricsLabel" text="No sort performed" 
                       style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
            </HBox>
            <Label text="Note: This uses Java sort algorithms (Quick/Merge/Heap Sort) separate from SQL ORDER BY" 
                   style="-fx-font-size: 10px; -fx-text-fill: #999; -fx-font-style: italic;"/>
        </VBox>
    </TitledPane>
    
    <!-- Actions -->
    <HBox spacing="10">
        <Button fx:id="viewDetailsBtn" text="View Details" styleClass="btn-secondary"/>
        <Button fx:id="confirmBtn" text="Confirm Booking" styleClass="btn-primary"/>
        <Button fx:id="cancelBtn" text="Cancel Booking" styleClass="btn-danger"/>
    </HBox>
    
    <!-- Bookings Table -->
    <TableView fx:id="bookingsTable" styleClass="table-view" prefHeight="500">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="reservationNumberColumn" text="Reservation #" prefWidth="150"/>
            <TableColumn fx:id="guestNameColumn" text="Guest Name" prefWidth="150"/>
            <TableColumn fx:id="hotelColumn" text="Hotel" prefWidth="200"/>
            <TableColumn fx:id="roomColumn" text="Room Type" prefWidth="150"/>
            <TableColumn fx:id="checkInColumn" text="Check-in" prefWidth="100"/>
            <TableColumn fx:id="checkOutColumn" text="Check-out" prefWidth="100"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
            <TableColumn fx:id="amountColumn" text="Amount" prefWidth="120"/>
        </columns>
    </TableView>
</VBox>

